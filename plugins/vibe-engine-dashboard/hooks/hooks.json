{
  "description": "Vibe Engine Dashboard lifecycle hooks - 指標收集",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/metrics-collector.js\"",
            "timeout": 3
          }
        ],
        "description": "收集工具執行指標"
      }
    ]
  }
}
